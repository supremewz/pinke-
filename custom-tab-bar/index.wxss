.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.custom-tab-bar-wrapper .text {
  font-size: 20rpx;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1000;
  box-shadow: 0 -1rpx 12rpx rgba(139, 92, 246, 0.08);
  border-top: 1rpx solid rgba(139, 92, 246, 0.1);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-bar-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #8B5CF6, #A78BFA);
  border-radius: 0 0 4rpx 4rpx;
  transition: width 0.3s ease;
}

.tab-bar-item.selected::before {
  width: 60rpx;
}

.tab-icon {
  margin-bottom: 2rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.tab-bar-item.selected .tab-icon {
  transform: scale(1.05);
}

.tab-icon-image {
  width: 48rpx;
  height: 48rpx;
}

.tab-text {
  font-size: 20rpx;
  line-height: 1.2;
  font-weight: 400;
  transition: all 0.3s ease;
}

.tab-bar-item.selected .tab-text {
  font-weight: 600;
  color: #8B5CF6;
}
